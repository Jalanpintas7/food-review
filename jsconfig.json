{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": false,
		"moduleResolution": "bundler",
		"target": "ES2020",
		"module": "ESNext",
		"verbatimModuleSyntax": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": false,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/*", ".svelte-kit/*"]
}
